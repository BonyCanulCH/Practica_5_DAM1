<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".programa4"
    android:background="#A2E2EA"
    android:gravity="center">

    <Button
        android:id="@+id/regresar4"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/txtprom2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="69dp"
        android:text="Regresar al Inicio" />

    <Button
        android:id="@+id/btncalc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTN5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="142dp"
        android:onClick="calcpromedio"
        android:text="@string/btn1mult" />

    <TextView
        android:id="@+id/txtprom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="113dp"
        android:text="@string/textapp4" />

    <EditText
        android:id="@+id/editTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtprom1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:hint="Asignatura 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:hint="Asignatura 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTN2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:hint="Asignatura 3"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTN4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTN3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:hint="Asignatura 4"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTN5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTN4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:hint="Asignatura 5"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtprom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btncalc2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="AquÃ­ va el resultado" />

</RelativeLayout>